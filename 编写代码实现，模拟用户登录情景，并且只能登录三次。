#include <stdio.h>

void Login()
{

   printf("---------------------------------------------------------------");
   printf("|************===================************|\n");
   printf("|************========请=========*************|\n");
   printf("|************========输=========*************|\n");
   printf("|************========入=========*************|\n");
   printf("|************========你=========*************|\n");
   printf("|************========得=========*************|\n");
   printf("|************========密=========*************|\n");
   printf("|************========码=========*************|\n");
   printf("|************===================************|\n");
   printf("|****************密码最多可错误三次 **************** |\n");
   printf("|****************三次均输入错误退出 **************** |\n");
   printf("|************===================************|\n");
   printf("-------------------------------------------------------------\n");

}

int main()
{
	int password = 10086;
	int count = 0;
	int pin;
	Login();
	while(count<=3)
	{
		if(count == 3)
			return 0;
		scanf("%d",&pin);
		switch(pin)
		{
		case 10086:
			printf("Password entered correctly!\n");
			break;
		default:
			printf("Password error!         ");
			printf("Pleasr again input!    \n");
			break;
		}
		count++;
	}
	return 0;
}
